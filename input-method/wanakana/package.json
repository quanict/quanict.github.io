{
  "name": "wanakana",
  "version": "3.0.2-beta.0",
  "license": "MIT",
  "homepage": "http://www.wanakana.com",
  "description": "Utility library for checking and converting between Kanji, Hiragana, Katakana, and Romaji",
  "keywords": [
    "english",
    "japanese",
    "hiragana",
    "katakana",
    "kana",
    "romaji",
    "conversion",
    "transliteration",
    "input",
    "ime",
    "wanikani"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com/WaniKani/WanaKana"
  },
  "bugs": {
    "url": "https://github.com/WaniKani/WanaKana/issues"
  },
  "devEngines": {
    "node": ">=8"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "node ./scripts/buildDist.js",
    "build:bundles": "cross-env BABEL_ENV=rollup rollup -c ./scripts/rollup.config.js",
    "build:bundles:watch": "onchange './src/**/*.js' -- npm run build:bundles",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "cypress:server": "static-server -p 9080 -i './cypress/fixtures/test-input.html'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --record",
    "cypress:test": "npm-run-all build --parallel --race cypress:server cypress:run",
    "cypress:watch": "npm-run-all --parallel --race build:bundles:watch cypress:server cypress:open",
    "predocs": "rimraf ./gh-pages/docs",
    "docs": "node_modules/.bin/jsdoc -c jsdoc.json",
    "docs:watch": "onchange './src/**/*.js' -- npm run docs",
    "docs:view": "opn ./gh-pages/docs/index.html",
    "demo:view": "npm run build && static-server ./gh-pages",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:view": "opn ./coverage/lcov-report/index.html",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "release": "node ./scripts/release.js",
    "format": "prettier-eslint --write",
    "lint": "eslint --color"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "bail": false,
    "verbose": false,
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 100,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!src/**/index.js",
      "!src/**/bind.js",
      "!src/**/unbind.js",
      "!src/**/dom.js",
      "!src/**/logInputEvents.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-es2017-object-entries": "0.0.4",
    "babel-preset-env": "1.6.1",
    "benchmark": "2.1.4",
    "commitizen": "2.9.6",
    "coveralls": "3.0.0",
    "cross-env": "5.1.1",
    "cypress": "1.4.1",
    "cz-conventional-changelog": "2.1.0",
    "docdash": "0.4.0",
    "eslint": "4.13.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-cypress": "2.0.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.5.1",
    "gh-pages": "1.1.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "jsdoc": "3.5.5",
    "lint-staged": "6.0.0",
    "npm-run-all": "4.1.2",
    "onchange": "3.3.0",
    "opn-cli": "3.1.0",
    "prettier-eslint-cli": "4.6.1",
    "readline-sync": "1.4.7",
    "rimraf": "2.6.2",
    "rollup": "0.52.2",
    "rollup-plugin-babel": "3.0.2",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "2.0.1",
    "static-server": "3.0.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}